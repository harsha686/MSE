<!DOCTYPE html>
<html>
<head>
  <title>Job Recruitment</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('partials/navbar') %>
  <h1>Welcome to Job Recruitment System</h1>
  <div class="job-list">
    <% jobs.forEach(job => { %>
      <div class="job">
        <h3><%= job.title %></h3>
        <p><%= job.description %></p>
        <form class="apply-id" action="/apply/<%= job.id %>" method="POST">
          <button class="apply-home" type="submit" class="apply-button">Apply</button>
        </form>
      </div>
    <% }); %>
  </div>
</body>
</html>

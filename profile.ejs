<!DOCTYPE html>
<html>
<head>
  <title>My Profile</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('partials/navbar') %>
  <div class="dashboard">
    <h1>My Profile</h1>
    <a href="/dashboard" class="button">Back to Dashboard</a>

    <form action="/profile" method="POST" enctype="multipart/form-data">
      <label>Full Name:</label>
      <input type="text" name="full_name" value="<%= profile?.full_name || '' %>" required>

      <label>Skills (comma-separated):</label>
      <textarea name="skills" required><%= profile?.skills || '' %></textarea>

      <label>Education:</label>
      <textarea name="education" required><%= profile?.education || '' %></textarea>

      <label>Experience:</label>
      <textarea name="experience"><%= profile?.experience || '' %></textarea>

      <label>Resume (PDF only):</label>
      <input type="file" name="resume" accept=".pdf">
      <% if (profile?.resume_path) { %>
        <p>Current Resume: <a href="<%= profile.resume_path %>" target="_blank">Download</a></p>
      <% } %>

      <button type="submit">Save Profile</button>
    </form>
  </div>
</body>
</html>
